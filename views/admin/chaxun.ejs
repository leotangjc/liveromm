<% layout('admin/master.ejs') %>

<div class="box-header with-border">
    <input type="button" value="查询用户" id="chaxunanniu" class='btn btn-primary'/>
</div>


<form class="form-horizontal  layer_notice hidden" action="xianshi" method="get" id="chaxunkuang">
    <div class="box-body">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">用户名</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="yonghuming" name="addname">
            </div>
        </div>
        <div class="box-footer">
            <button type="button" id="chaxun" class="btn btn-info pull-right closeBtn">查询</button>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">用户名</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="yonghuming1" name="dlename">
            </div>
        </div>
        <div class="box-footer">
            <button type="button" id="shanchu" class="btn btn-info pull-right closeBtn">删除</button>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">用户名</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="yuanming" name="yuanming">
            </div>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="xinming" name="xinming">
            </div>
        </div>
        <div class="box-footer">
            <button type="button" id="gengxin" class="btn btn-info pull-right closeBtn">更新</button>
        </div>
</form>


<script>
  var trNodep;
  $(document).ready(function() {

    //显示查询框
    $('#chaxunanniu').on('click', function() {
      $('#chaxunkuang').removeClass('hidden');
      layer.open({
        type: 1,
        skin: 'layui-layer-rim',
        shade: false,
        title: false, //不显示标题
        content: $('#chaxunkuang'), //捕获的元素
        area: ['620px'],
        cancel: function(index) {
          layer.close(index);
        },
        scrollbar: false,
      });
    });

    //查询
    $('#chaxun').on('click', function() {
      var parmets = {
        addname: $('#yonghuming').val(),
      };
      $.ajax({
        url: 'xianshi',
        type: 'get',
        data: parmets,
        success: function(returndata) {
          console.log(returndata);
        }, error: function(returndata) {
          alert('找不到该用户');
        },
      });
    });

    //更新
    $('#genxing').on('click', function() {
      var gx = {
        yuanming: $('#yuanming').val(),
        xinming: $('#xinming').val()
      };
      $.ajax({
        url: 'genxing',
        type: 'put',
        data: gx,
        success: function(returndata) {
          alert('成功更新');
        }, error: function(returndata) {
          alert('找不到该用户');
        },
      });
    });


  });
</script>